<?xml version="1.0"?>
<xul:page id="Main" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<xul:vbox id="Main-auth">
		<xul:box id="Main-logout" style="display:none">
			<xul:button id="Main-logout-button" label="Logout" />
		</xul:box>
		<xul:vbox id="Main-login" style="display:none">
			<xul:grid id="Main-login-form">
				<xul:rows>
					<xul:row>
						<xul:label width="100" value="Login" />
						<xul:textbox id="Main-login-form-name" />
					</xul:row>
					<xul:row>
						<xul:label value="Password" />
						<xul:textbox id="Main-login-form-pass" type="password"/>
					</xul:row>
					<xul:row>
						<xul:label />
						<xul:checkbox id="Main-login-form-remember" label="Remember me" checked="true"/>
					</xul:row>
					<xul:row>
						<xul:label />
						<xul:button id="Main-login-form-submit" label="Login" />
					</xul:row>
				</xul:rows>
			</xul:grid>
			<xul:description id="Main-login-error" value=""/>
		</xul:vbox>
	</xul:vbox>
	<xul:vbox id="Main$children" flex="1">

	</xul:vbox>
</xul:page>