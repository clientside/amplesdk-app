<?xml version="1.0"?>
<xul:vbox id="Workspace" xmlns="http://www.w3.org/1999/xhtml" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<xul:vbox id="Workspace-dummy">
		<xul:toolbar id="Workspace-toolbar">
			<xul:toolbarbutton id="Workspace-toolbar-add" label="Add item"/>
			<xul:toolbarbutton id="Workspace-toolbar-edit" label="Edit item"/>
			<xul:toolbarbutton id="Workspace-toolbar-remove" label="Remove items"/>
		</xul:toolbar>
		<xul:listbox id="Workspace-datalist" seltype="single">
			<xul:listhead>
				<xul:listheader label="id" />
				<xul:listheader label="Name" />
				<xul:listheader label="Description" width="400"/>
			</xul:listhead>
			<xul:listbody />
		</xul:listbox>
		<xul:grid id="Workspace-dataitemform" hidden="true">
			<xul:columns>
				<xul:column width="100"/>
				<xul:column />
			</xul:columns>
			<xul:rows>
				<xul:row>
					<xul:label width="100" value="Name" />
					<xul:textbox name="name" />
				</xul:row>
				<xul:row>
					<xul:label value="Description" />
					<xul:textbox name="description" multiline="true" />
				</xul:row>
				<xul:row>
					<xul:button label="Cancel" id="Workspace-dataitemform-cancel" pack="end"/>
					<xul:button label="Save" id="Workspace-dataitemform-save"/>
				</xul:row>
			</xul:rows>
		</xul:grid>
	</xul:vbox>
	<xul:box id="Workspace$children">

	</xul:box>
</xul:vbox>